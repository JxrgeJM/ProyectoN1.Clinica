@model IEnumerable<ProyectoN1.Clinica.Entidades.Clinica>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Clinicas</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { pId = item.Id }) | 
            @Html.ActionLink("Especialidades", "Especialidades", new { pIdClinica = item.Id }) | 
            @Html.ActionLink("Médicos", "Medicos", new { pIdClinica = item.Id }) 
        </td>
    </tr>
}

</table>
