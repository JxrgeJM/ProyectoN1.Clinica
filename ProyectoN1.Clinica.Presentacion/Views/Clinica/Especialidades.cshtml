@model IEnumerable<ProyectoN1.Clinica.Entidades.TipoEspecialidad>

@{
    ViewBag.Title = "Especialidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Especialidades (@ViewBag.Clinica.Nombre)</h2>

<p class="text-right">
    @Html.ActionLink("Nuevo", "AgregarEspecialidad", new { pIdClinica = @ViewBag.Clinica.Id }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Quitar", "QuitarEspecialidad", new { pIdClinica = @ViewBag.Clinica.Id, pIdEspecialidad = item.Id })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
