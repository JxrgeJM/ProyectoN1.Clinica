@model IEnumerable<ProyectoN1.Clinica.Entidades.Reportes.RepAtencionMedico>

@{
    ViewBag.Title = "Estadisticas1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Informe de atención por médico</h2>

<div class="mt mb">
    @Html.ActionLink("Descargar JSON", "Estadisticas1JSON", null, new { Id = "BtnDescargar", @class = "btn btn-primary" })
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Medico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantidadCitas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PorcentajeAtencion)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Medico.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CantidadCitas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PorcentajeAtencion)
        </td>
    </tr>
}

</table>
